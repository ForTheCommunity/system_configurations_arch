{
  "languageserver": {
    "rust-analyzer": {
      "command": "rust-analyzer",
      "filetypes": ["rust"],
      "rootPatterns": ["Cargo.toml"],
      "initializationOptions": {
	      "diagnostics": true, 
	      "lint": true
	}
    },

  "clangd": {
	    "command": "clangd",
	    "rootPatterns": ["Makefile",".git/"],
	    "filetypes": ["c", "cpp", "objc", "objcpp"],
	    "initializationOptions": {
        	"clangdFileStatus": true
	  }
    },

    "zls": {
	    "command": "zls",
	    "rootPatterns": ["Makefile",".git/"],
	    "filetypes": ["zig"],
	    "initializationOptions": {
		    "diagnostics": true, 
		    "lint": true
	    }
    },


    
  "cmake": {
	    "command": "~/python_virtual_env/bin/cmake-language-server",
	    "rootPatterns": ["CMakeLists.txt","Makefile",".git/","builds"],
	    "filetypes": ["cmake"],
	    "initializationOptions": {}
    },

  },
 "coc.preferences.formatOnSaveFiletypes": ["rust","c","cpp","dart","zig"],
}

